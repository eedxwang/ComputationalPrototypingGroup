%%%%%
%% Redefinition of \thanks in titlepage so that it does make asterisks, etc.
%% (stolen from Chris Umminger)
% redefine the \thanks command on the title page to omit the footmark
% number

\renewcommand{\thanks}[1]{\begingroup
\def\protect{\noexpand\protect\noexpand}\xdef\@thanks{\@thanks
  \protect\thanksnotetext{#1}}\endgroup}

\def\thanksnotetext{\@thanksnotetext}

\def\thanksnotesep{15pt}

\long\def\@thanksnotetext#1{\insert\footins{\footnotesize
    \interlinepenalty\interfootnotelinepenalty
    \splittopskip\footnotesep
    \splitmaxdepth \dp\strutbox \floatingpenalty \@MM
    \hsize\columnwidth \@parboxrestore
   \@makethankstext
    {\rule{\z@}{\thanksnotesep}\ignorespaces
      #1\strut}}}

\long\def\@makethankstext#1{\parindent 1em\noindent
            \hbox to 1.8em{\hss}#1}
