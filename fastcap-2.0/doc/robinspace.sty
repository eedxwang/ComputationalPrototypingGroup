% add the spacing commands (snarfed from bugs-bunny)
% Single- and double-spacing macros for LATEX
% These macros are designed to be used with \begin and \end in the typical
% LATEX-environment way, e.g.,
%
%       \begin{singlespace}
%           .
%        \begin{doublespace}
%            .
%        \end{doublespace}
%           .
%       \end{singlespace}
%%%%%%%%
%% outerdoublespace environment defined to stop new latex's objections
%% to dangling \begingroup's (says \end{doublespace} matches \begin{document})
%% 28Feb91

\def\singlespace{\par%
 \vskip \parskip%
 \vskip \baselineskip%
 \def\baselinestretch{1}%
 \ifx\@currsize\normalsize\@normalsize\else\@currsize\fi%
 \vskip -\parskip%
 \vskip -\baselineskip}

\def\endsinglespace{\par}

\def\doublespace{\par%
 \def\baselinestretch{1.6}%
 \ifx\@currsize\normalsize\@normalsize\else\@currsize\fi}

\def\enddoublespace{\par%
 \vskip \parskip%
 \vskip \baselineskip%
 \endgroup%
 \vskip -\parskip%
 \vskip -\baselineskip%
 \begingroup}

\def\onehalfspace{\par%
 \def\baselinestretch{1.3}%
 \ifx\@currsize\normalsize\@normalsize\else\@currsize\fi}

\def\endonehalfspace{\par%
 \vskip \parskip%
 \vskip \baselineskip%
 \endgroup%
 \vskip -\parskip%
 \vskip -\baselineskip%
 \begingroup}

\def\outerdoublespace{\par%
 \def\baselinestretch{1.6}%
 \ifx\@currsize\normalsize\@normalsize\else\@currsize\fi}

\def\endouterdoublespace{\par%
 \vskip \parskip%
 \vskip \baselineskip}
% \endgroup%
% \vskip -\parskip%
% \vskip -\baselineskip%
% \begingroup}
